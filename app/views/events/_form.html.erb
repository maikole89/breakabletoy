<%= form_for(@event , url: [:admin, @event], html: { multipart: true}) do |f| %>
  <% if @event.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@event.errors.count, 'error') %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='field'>
    <p><i>Please use the format 'MM/DD/YYYY'</i></p>
    <%= f.label :event_date %>
    <%= f.text_field :event_date %>
  </div>

  <div class='field'>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class='actions'>
    <%= f.submit 'Submit' %>
  </div>
<% end %>
